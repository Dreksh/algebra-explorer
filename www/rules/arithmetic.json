        {
            "title": "Identity of Addition",
            "description": "Adding 0 does not change the value",
            "reversible": true,
            "lhs": "a+0",
            "rhs": "a"
        },
        {
            "title": "Inverse of Addition",
            "description": "Definition of negative numbers",
