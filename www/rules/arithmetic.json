            "parameters": {
                "a": "the expression to introduce"
            }
        },
        {
            "title": "Double Inverse of Addition",
            "description": "Definition of negating a number",
            "reversible": true,
            "lhs": "--a",
            "rhs": "a"
        },
        {
            "title": "Distributive property of negation",
            "description": "The negation of a sum is the sum of their negation",
            "reversible": true,
            "lhs": "-(a+b)",
            "rhs": "-a-b"
        },
        {
            "title": "Identity of Multiplication",
            "description": "Multiplying by 1 does not change the value",
            "reversible": true,
            "lhs": "a*1",
            "rhs": "a"
        },
        {
            "title": "Inverse of Multiplication",
            "description": "Definition of reciprocals",
