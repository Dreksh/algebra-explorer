{
    "name": "Fractions",
    "functions":{
        "fraction": {"arguments": 2, "associative": false, "commutative": false, "latex": "\\frac{\\arg{1}}{\\arg{2}}", "alternativeNames": ["frac"]},
        "mixedfraction": {"arguments": 3, "latex": "\\arg{1}\\frac{\\arg{2}}{\\arg{3}}"}
    },
    "constants": {},
    "actions": [
        {
            "title": "Expand",
            "description": "Split a mixed number into a whole number and a proper fraction",
            "matches": [
                {"from": "\\mixedfraction(a,b,c)", "to": ["a+\\fraction(b,c)"]},
                {"from": "\\fraction(\\fraction(a,b)*c,d)", "to": ["\\fraction(a*c,b*d)"]},
                {"from": "\\fraction(a/b,c)", "to": ["\\fraction(a,b*c)"]},
                {"from": "\\fraction(a,\\fraction(b,c)*d)", "to": ["\\fraction(a*c,b*d)"]},
                {"from": "\\fraction(a,b/c)", "to": ["\\fraction(a*c,b)"]}
            ]
        },
        {
            "title": "Change denominator",
            "description": "When you split the cake into smaller chunks, you also get more chunks",
            "parameters": {
                "\\multiplier": {
                    "description": "Number of times to split it. It will be multiplied on both the top and bottom of the fraction",
                    "example": "1"
                }
            },
            "matches": [{"from": "\\fraction(a,b)", "to": ["\\fraction(a*\\multiplier,b*\\multiplier)"]}]
        },
        {
            "title": "To Fraction",
            "description": "Change a number into a fraction",
            "matches": [{"from": "a/b", "to": ["\\fraction(a,b)"]}]
        },
        {
            "title": "Split",
            "description": "Change the fraction back into division",
            "matches": [{"from": "\\fraction(a,b)", "to": ["a/b"]}]
        },
        {
            "title": "Merge",
            "description": "Multiplication and division can be put into the fraction",
            "matches": [
                {"from": "\\fraction(a,b)*\\fraction(c,d)*e", "to": ["\\fraction(a*c,b*d)*e"]},
                {"from": "\\fraction(b,c)/a*d", "to": ["\\fraction(b,c*a)*d"]},
                {"from": "\\fraction(b,c)*a*d", "to": ["\\fraction(b*a,c)*d"]}
            ]
        },
        {
            "title": "Factorise",
            "description": "Combine the fractions that contain the same denominator",
            "matches": [
                {"from": "\\fraction(a,b)+\\fraction(c,b)", "to": ["\\fraction(a+c,b)"]},
                {"from": "\\fraction(a,b)-\\fraction(c,b)", "to": ["\\fraction(a-c,b)"]}
            ]
        },
        {
            "title": "Cancel out",
            "description": "Remove factors from the top and bottomt hat are the same",
            "matches": [
                {"from": "\\fraction(a*b,a*c)", "to": ["\\fraction(b,c)"]}
            ]
        }
    ]
}
