{
    "name": "Trigonometry",
    "functions":{
        "degrees": {"arguments": 1, "latex": "\\arg{1}^\\circ", "alternativeNames": ["degree"]},
        "sin": {"arguments": 1, "latex": "sin\\arg{1}", "alternativeNames": ["sine"]},
        "cos": {"arguments": 1, "latex": "cos\\arg{1}", "alternativeNames": ["cosine"]},
        "tan": {"arguments": 1, "latex": "tan\\arg{1}", "alternativeNames": ["tangent"]},
        "sqrt": {"arguments": 1, "latex": "\\sqrt{\\arg{1}}", "alternativeNames": ["root"]}
    },
    "constants": {
        "pi": "Math.PI",
        "infty": "Number.POSITIVE_INFINITY"
    },
    "actions": [
        {
            "title": "To Radians",
            "description": "Convert an angle in degrees to radians",
            "matches": [
                {"from": "\\degrees(a)", "to": ["a*\\pi/180"]}
            ]
        },
        {
            "title": "Wrap around",
            "description": "Angles keep looping",
            "matches": [
                {"from": "\\degrees(360+a)", "to": ["\\degrees(a)"]},
                {"from": "\\degrees(2\\pi+a)", "to": ["\\degrees(a)"]}
            ]
        },
        {
            "title": "Negative Angles",
            "description": "Trig identities with negative angles",
            "matches": [
                {"from": "\\sin(a)", "to": ["-\\sin(-a)"]},
                {"from": "\\cos(a)", "to": ["\\cos(-a)"]},
                {"from": "\\tan(a)", "to": ["-\\tan(-a)"]}
            ]
        },
        {
            "title": "Pythagorus",
            "description": "Applying pythagorus to the right-angle triangle",
            "matches": [{"from": "\\sin(a)\\sin(a)+\\cos(a)\\cos(a)", "to": ["1"]}]
        },
        {   "title": "Compound Angle",
            "description": "When you add angles",
            "matches": [
                {"from": "\\sin(a+b)", "to": ["\\sin(a)\\cos(b)+\\cos(a)\\sin(b)"]},
                {"from": "\\cos(a+b)", "to": ["\\cos(a)\\cos(b)-\\sin(a)\\sin(b)"]},
                {"from": "\\tan(a+b)", "to": ["(\\tan(a)+\\tan(b))/(1-\\tan(a)\\tan(b))"]}
            ]
        },
        {   "title": "Resolve",
            "description": "Some values can be resolved to known numbers",
            "matches": [
                {"from": "\\sin(0)", "to": ["0"]},
                {"from": "\\cos(0)", "to": ["1"]},
                {"from": "\\tan(0)", "to": ["0"]},
                {"from": "\\sin(\\pi/6)", "to": ["1/2"]},
                {"from": "\\cos(\\pi/6)", "to": ["\\sqrt(3)/2"]},
                {"from": "\\tan(\\pi/6)", "to": ["1/\\sqrt(3)"]},
                {"from": "\\sin(\\degrees(30))", "to": ["1/2"]},
                {"from": "\\cos(\\degrees(30))", "to": ["\\sqrt(3)/2"]},
                {"from": "\\tan(\\degrees(30))", "to": ["1/\\sqrt(3)"]},
                {"from": "\\sin(\\pi/4)", "to": ["1/\\sqrt(2)"]},
                {"from": "\\cos(\\pi/4)", "to": ["1/\\sqrt(2)"]},
                {"from": "\\tan(\\pi/4)", "to": ["1"]},
                {"from": "\\sin(\\degrees(45))", "to": ["1/\\sqrt(2)"]},
                {"from": "\\cos(\\degrees(45))", "to": ["1/\\sqrt(2)"]},
                {"from": "\\tan(\\degrees(45))", "to": ["1"]},
                {"from": "\\sin(\\pi/3)", "to": ["\\sqrt(3)/2"]},
                {"from": "\\cos(\\pi/3)", "to": ["1/2"]},
                {"from": "\\tan(\\pi/3)", "to": ["\\sqrt(3)"]},
                {"from": "\\sin(\\degrees(60))", "to": ["\\sqrt(3)/2"]},
                {"from": "\\cos(\\degrees(60))", "to": ["1/2"]},
                {"from": "\\tan(\\degrees(60))", "to": ["\\sqrt(3)"]},
                {"from": "\\sin(\\pi/2)", "to": ["1"]},
                {"from": "\\cos(\\pi/2)", "to": ["0"]},
                {"from": "\\tan(\\pi/2)", "to": ["\\infty"]},
                {"from": "\\sin(\\degrees(90))", "to": ["1"]},
                {"from": "\\cos(\\degrees(90))", "to": ["0"]},
                {"from": "\\tan(\\degrees(90))", "to": ["\\infty"]},
                {"from": "\\sin(\\pi)", "to": ["0"]},
                {"from": "\\cos(\\pi)", "to": ["-1"]},
                {"from": "\\tan(\\pi)", "to": ["0"]},
                {"from": "\\sin(\\degrees(180))", "to": ["0"]},
                {"from": "\\cos(\\degrees(180))", "to": ["-1"]},
                {"from": "\\tan(\\degrees(180))", "to": ["0"]}
            ]
        }
    ]
}
