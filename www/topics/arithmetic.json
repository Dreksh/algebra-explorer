{
    "name": "Arithmetic",
    "functions":{
        "+": {"arguments": 2, "associative": true, "commutative": true, "identity": 0, "javascript": {"type":"infix", "symbol": "+"}, "latex": "+"},
        "*": {"arguments": 2, "associative": true, "commutative": true, "identity": 1, "javascript": {"type":"infix", "symbol": "*"}, "latex": "\\times"},
        "-": {"arguments": 1, "javascript":{"type":"prefix", "symbol": "-"}, "latex": "-"},
        "/": {"arguments": 1, "javascript":{"type":"prefix", "symbol":"1/"}, "latex": "\\div"}
    },
    "constants": {},
    "actions": [
        {
            "title": "Cancel Out",
            "description": "Combining with their inverse, variables can be cancelled out",
            "matches": [
                {"from": "a-a+b", "to": ["b"]},
                {"from": "a*0", "to": ["0"]},
                {"from": "a/a*b", "to": ["b"]},
                {"from": "a+0", "to": ["a"]},
                {"from": "a-0", "to": ["a"]},
                {"from": "a*1", "to": ["a"]},
                {"from": "a/1", "to": ["a"]},
                {"from": "--a", "to": ["a"]},
                {"from": "1/1/a", "to": ["a"]}
            ]
        },
        {
            "title": "Uncancel",
            "description": "Introduce _term_s without changing the value",
            "parameters": {
                "a": {
                    "description": "The _term_ to introduce",
                    "example": "1"
                }
            },
            "matches": [
                {"from": "x", "to": ["x+a-a"]},
                {"from": "x", "to": ["x*a/a"]}
            ]
        },
        {
            "title": "Uncancel",
            "description": "Reintroducing double inversion, or inserting nothing",
            "matches": [
                {"from": "a", "to": ["a+0"]},
                {"from": "a", "to": ["a-0"]},
                {"from": "a", "to": ["a*1"]},
                {"from": "a", "to": ["a/1"]},
                {"from": "a", "to": ["--a"]},
                {"from": "a", "to": ["1/1/a"]}
            ]
        },
        {
            "title": "Move Negation",
            "description": "Negation can be moved to any factor of a term",
            "matches": [
                {"from": "-a*b", "to": ["a*-b"]},
                {"from": "1/-a", "to": ["-1/a"]}
            ]
        },
        {
            "title": "Expand",
            "description": "Operations on an expression can be distributed amongst components",
            "matches": [
                {"from": "-(a+b)", "to": ["-a-b"]},
                {"from": "-(a+b)+c", "to": ["-a-b+c"]},
                {"from": "m(a+b)", "to": ["ma+mb"]},
                {"from": "m(a+b)+c", "to": ["ma+mb+c"]},
                {"from": "-(a*b)", "to": ["-a*b"]},
                {"from": "1/(a*b)", "to": ["1/a*1/b"]}
            ]
        },
        {
            "title": "Factorise",
            "description": "Sub-operations within an expression can be gathered across components",
            "matches": [
                {"from": "-a-b", "to": ["-(a+b)"]},
                {"from": "a+a", "to": ["2a"]},
                {"from": "ma+mb", "to": ["m(a+b)"]},
                {"from": "-a*b", "to": ["-(a*b)"]},
                {"from": "1/a*1/b", "to": ["1/(a*b)"]}
            ]
        },
        {
            "title": "Operate on both sides",
            "description": "Modifying the values in the same way on both sides retain the equality",
            "parameters": {
                "\\f(x)": {
                    "description": "The function to apply on both sides of the equation",
                    "example": "x"
                }
            },
            "matches": [
                {"from": "a=b", "to": ["\\f(a)=\\f(b)"]}
            ]
        },
        {
            "title": "Find Zeros",
            "description": "If multiple things multiply to 0, it would be true if any of them are 0",
            "matches": [
                {"from": "a*b=0", "to": ["a=0", "b=0"]}
            ]
        }
    ]
}
